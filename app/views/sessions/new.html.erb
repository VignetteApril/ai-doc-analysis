<div class="min-h-screen bg-gradient-to-br from-sky-50 via-white to-indigo-50 flex items-center justify-center px-4">
  <div class="w-full max-w-md">
    <div class="bg-white/80 backdrop-blur shadow-xl rounded-2xl p-8 border border-gray-100">
      <div class="flex items-center gap-3 mb-6">
        <div class="h-10 w-10 rounded-xl bg-indigo-600 flex items-center justify-center text-white font-bold">L</div>
        <div>
          <h1 class="text-xl font-semibold text-gray-900">系统登录</h1>
          <p class="text-sm text-gray-500">请输入邮箱与密码进入系统</p>
        </div>
      </div>

      <% if flash[:alert] %>
        <div class="mb-4 text-sm text-red-700 bg-red-50 border border-red-200 rounded-lg p-3"><%= flash[:alert] %></div>
      <% end %>
      <% if flash[:notice] %>
        <div class="mb-4 text-sm text-green-700 bg-green-50 border border-green-200 rounded-lg p-3"><%= flash[:notice] %></div>
      <% end %>

      <%= form_with url: login_path, method: :post, class: "space-y-5" do %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">邮箱</label>
          <%= email_field_tag :email, params[:email],
                required: true,
                class: "w-full rounded-xl border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">密码</label>
          <%= password_field_tag :password, nil,
                required: true,
                class: "w-full rounded-xl border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
        </div>

        <div class="flex items-center justify-between">
          <label class="inline-flex items-center gap-2 text-sm text-gray-600">
            <input type="checkbox" class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500">
            记住我
          </label>
          <a href="#" class="text-sm text-indigo-600 hover:text-indigo-700">忘记密码？</a>
        </div>

        <button type="submit"
                class="w-full inline-flex justify-center items-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium px-4 py-2.5 rounded-xl transition">
          登录
        </button>
      <% end %>
    </div>

    <p class="mt-6 text-center text-xs text-gray-500">
      © <%= Time.current.year %> Your Company. All rights reserved.
    </p>
  </div>
</div>
